
@{
    Layout = null;
}
@model WebApplication_middleware.Models.Account
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Login</h3>
    @ViewBag.error

    <form method="post" asp-controller="login" asp-action="login">
        <table>
            <tr>
                <td>Username</td>
                <td><input type="text" asp-for="Username" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="password"  asp-for="Password"/></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td><input type="submit" value="Login" asp-action="login" /></td>
            </tr>
        </table>
    </form>
</body>
</html>
